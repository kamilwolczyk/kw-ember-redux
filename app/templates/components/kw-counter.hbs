<div class="card card-body">
    <h2>Counter [{{counterValue}}]</h2>

    <div class="row">
        <div class="col-6">
            <button class="btn btn-primary" {{action "add" 1}}>+</button>
            <button class="btn btn-warning" {{action "subtract" 1}}>-</button>
        </div>
        <div class="col-6">
            <div class="row">
                {{input type="number" class="col-8 form-control" value=customValue}}
                <div class="col-4">
                    <button class="btn" {{action "addCustom"}} disabled={{invalidCustomValue}}>Add</button>
                </div>
            </div>
        </div>
    </div>

</div>